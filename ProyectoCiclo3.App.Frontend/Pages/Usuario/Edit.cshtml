@page
@model ProyectoCiclo3.App.Frontend.Pages.EditUsuarioModel
@{
    var usuario = Model.Usuario;
}
 
<div class = "text-center">
<form method = "POST">
  <input type="number" class="form-control d-none" id="id" name="id" placeholder="id" asp-for="@usuario.id" readonly>

  <label for="nombre" class="form-label">nombre:</label>
  <input type="text" class="form-control" id="nombre" name="nombre" placeholder="nombre" required minlength="8" asp-for="@usuario.nombre">

  <label for="apellido" class="form-label">apellido:</label>
  <input type="text" class="form-control" id="apellido" name="apellido" placeholder="apellido" required minlength="8" asp-for="@usuario.apellido">

  <label for="direccion" class="form-label">direccion:</label>
  <input type="text" class="form-control" id="direccion" name="direccion" placeholder="direccion" required minlength="8" asp-for="@usuario.direccion">

  <label for="telefono" class="form-label">telefono:</label>
  <input type="number" class="form-control" id="telefono" name="telefono" placeholder="telefono" asp-for="@usuario.telefono" required>
  
  <hr>
  <button type="submit" class="btn btn-success">Actualizar</button>
  <a href="/Usuarios/List" class="btn btn-danger btn-sm" role="button">Cancelar</a>
</form>
</div>